! Colorscheme and configuration for some X apps
! 
! urxvt
URxvt.intensityStyles: false
URxvt.scrollBar: false
URxvt.modifier: alt
URxvt.url-launcher: /usr/bin/firefox

!! fonts
! switched to nerd-fonts, patched Source Code Pro including FontAwesome
! is called Sauce Code Pro. I put it in .local/share/fonts
! see github page of the project for other patched fonts
! to find xft name of a font use "fc-list | grep"
! you have to use the "Mono" type fonts from nerd fonts
URxvt*font: xft:Iosevka:style=Regular:size=12,\
            xft:Inziu Iosevka J
URxvt*letterSpace: -1

Xft.autohint: 1
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintslight
Xft.hinting: true
Xft.antialias: true
Xft.rgba: rgb
Xft.dpi: 96

!! transparency
! shading: 0 to 99 darkens, 101 to 200 lightens
!URxvt*transparent: true
!URxvt*shading: 15 

